<!DOCTYPE html>
<html>
  <head>
    <title>Brockit</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="apple-touch-icon" sizes="180x180" href="http://brockit.herokuapp.com/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="http://brockit.herokuapp.com/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="http://brockit.herokuapp.com/favicon-16x16.png">
    <link rel="manifest" href="http://brockit.herokuapp.com/site.webmanifest">
    <link rel="mask-icon" href="http://brockit.herokuapp.com/safari-pinned-tab.svg" color="red">
    <meta name="msapplication-TileColor" content="#ff0000">
    <meta name="theme-color" content="#ffffff">
  </head>

  <body>

    <div class="container">
      <ul class="nav nav-tabs">
        <li><%= link_to "Bloccit", root_path %></li>
        <li><%= link_to "Topics", topics_path %></li>
        <li><%= link_to "About", about_path %></li>
        <% if current_user %>
        <li class="pull-right"><%= link_to "Sign Out", session_path(current_user), method: :delete %></li>
        <li class="pull-right"><%= image_tag current_user.avatar_url(48) %></li>
        <li class="pull-right"><%= link_to current_user.name, user_path(current_user) %></li>
         </div>
        <% else %>
          <li class="pull-right"><%= link_to "Sign In", new_session_path %></li>
          <li class="pull-right"><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
    </ul>

    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>
  </div>

  </body>
</html>
